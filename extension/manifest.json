{
  "manifest_version": 3,
  "name": "Gist List - AI Reseller Assistant",
  "version": "1.0.0",
  "description": "Automate posting listings to multiple reselling platforms with AI-processed data",
  
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs"
  ],
  
  "host_permissions": [
    "*://*.craigslist.org/*",
    "*://*.reverb.com/*",
    "*://*.poshmark.com/*",
    "*://*.ebay.com/*",
    "*://*.nextdoor.com/*",
    "*://*.mercari.com/*",
    "*://*.facebook.com/*",
    "*://*.marketplace.facebook.com/*"
  ],
  
  "background": {
    "service_worker": "background/background.js"
  },
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Gist List",
    "default_icon": {
      "16": "assets/icon16.png",
      "32": "assets/icon32.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    }
  },
  
  "content_scripts": [
    {
      "matches": ["*://*.craigslist.org/*"],
      "js": ["content-scripts/craigslist.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["*://*.reverb.com/*"],
      "js": ["content-scripts/reverb.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["*://*.poshmark.com/*"],
      "js": ["content-scripts/poshmark.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["*://*.ebay.com/*"],
      "js": ["content-scripts/ebay.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["*://*.nextdoor.com/*"],
      "js": ["content-scripts/nextdoor.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["*://*.mercari.com/*"],
      "js": ["content-scripts/mercari.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["*://*.facebook.com/*", "*://*.marketplace.facebook.com/*"],
      "js": ["content-scripts/facebook.js"],
      "run_at": "document_end"
    }
  ],
  
  "web_accessible_resources": [
    {
      "resources": ["assets/*", "background/data-sync.js", "content-scripts/base-content-script.js"],
      "matches": ["<all_urls>"]
    }
  ],
  
  "icons": {
    "16": "assets/icon16.png",
    "32": "assets/icon32.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  }
}